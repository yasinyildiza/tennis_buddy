<p id="notice"><%= notice %></p>

<fieldset id="create_form">
  <legend>Skill Level</legend>
  <%= button_to 'Edit', edit_skill_level_path(@skill_level), method: :get, class: :edit_button %>

<p>
  <strong>Name:</strong>
  <%= @skill_level.name %>
</p>

<p>
  <strong>Minimum years:</strong>
  <%= @skill_level.minimum_years %>
</p>

<p>
  <strong>Maximum years:</strong>
  <%= @skill_level.maximum_years %>
</p>

<p>
  <strong>Users:</strong>
</p>
<% if @skill_level.users.count > 0 %>
  <% @skill_level.users.each do |user| %>
    <%= link_to user.full_name, user %><br/>
  <% end %>
<% else %>
  <p>-</p>
<% end %>

</fieldset>
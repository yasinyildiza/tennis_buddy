<fieldset class="index_set">
  <legend>Ratings (<%= @ratings.count %>)</legend>
  <%= button_to 'New Rating', new_rating_path, method: :get, class: :new_model_button %>

<% if @ratings.count > 0 %>
  <table>
    <thead>
      <tr>
        <th>Sender</th>
        <th>Receiver</th>
        <th>Rate</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @ratings.each do |rating| %>
        <tr>
          <td><%= rating.sender.full_name %></td>
          <td><%= rating.receiver.full_name %></td>
          <td><%= rating.rate %></td>
          <td><%= link_to 'Show', rating %></td>
          <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
          <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h4>No Record found</h4>
<% end %>

</fieldset>
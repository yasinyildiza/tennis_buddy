<%= simple_form_for(@invited_user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :inviter_id, as: :hidden, input_html: {value: current_user.id} %>
    <%= f.input :email, label: false, input_html: {class: :form_input}, placeholder: "abc@def.com" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

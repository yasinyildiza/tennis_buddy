<fieldset class="index_set">
  <legend>User Matches (<%= @user_matches.count %>)</legend>
  <%= button_to 'New User Match', new_user_match_path, method: :get, class: :new_model_button %>

<% if @user_matches.count > 0 %>
  <table>
    <thead>
      <tr>
        <th>Home User</th>
        <th>Away User</th>
        <th>Tennis Court</th>
        <th>Number of Sets</th>
        <th>Winner</th>
        <th>Score</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @user_matches.each do |user_match| %>
        <tr>
          <td><%= user_match.home_user.full_name %></td>
          <td><%= user_match.away_user.full_name %></td>
          <% if user_match.tennis_court %>
            <td><%= user_match.tennis_court.full_name %></td>
          <% else %>
            <td>Not selected</td>
          <% end %>
          <td><%= user_match.number_of_sets %></td>
          <td>
            <% if user_match.is_completed %>
              <%= user_match.winner_user.full_name %>
            <% else %>
              ...
            <% end %>
          </td>
          <td><%= user_match.home_user_score %> - <%= user_match.away_user_score %></td>
          <td><%= link_to 'Show', user_match %></td>
          <td><%= link_to 'Edit', edit_user_match_path(user_match) %></td>
          <td><%= link_to 'Destroy', user_match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h4>No Record found</h4>
<% end %>

</fieldset>
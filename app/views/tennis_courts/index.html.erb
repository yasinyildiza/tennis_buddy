<fieldset class="index_set">
  <legend>Tennis Courts (<%= @tennis_courts.count %>)</legend>
  <%= button_to 'New Tennis Court', new_tennis_court_path, method: :get, class: :new_model_button %>

<% if @tennis_courts.count > 0 %>
  <table>
    <thead>
      <tr>
        <th>City</th>
        <th>Name</th>
        <th>Phone number</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tennis_courts.each do |tennis_court| %>
        <tr>
          <td>
            <% if tennis_court.city %>
              <%= tennis_court.city.name %>
            <% else %>
              Not selected
            <% end %>
          </td>
          <td><%= tennis_court.name %></td>
          <td><%= tennis_court.phone_number %></td>
          <td><%= tennis_court.address %></td>
          <td><%= link_to 'Show', tennis_court %></td>
          <td><%= link_to 'Edit', edit_tennis_court_path(tennis_court) %></td>
          <td><%= link_to 'Destroy', tennis_court, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h4>No Record found</h4>
<% end %>

</fieldset>